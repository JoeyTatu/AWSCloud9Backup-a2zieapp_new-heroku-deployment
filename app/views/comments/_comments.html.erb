<div class="container">
  <h3>Comments</h3>
  <% if @location.comments.count < 1 %>
    <div class="well">
      <p><strong>No comments yet.</p>
    </div>
    
  <% else %>
  
    <% @location.comments.each do |comment| %>
      <div class="well">
        <p>
            <strong><%= comment.username %></strong>:
              <%= comment.body %> <%= link_to '[X]', [comment.location, comment], method: :delete, data: { confirm: 'Only admins can delete. Continue?'}, title: "Delete comment" %>
        </p>
      </div>
    <% end %>
    
  <% end %>
</div>